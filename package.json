{
  "version": "1.5.4",
  "type": "module",
  "name": "g4c",
  "description": "A basic pure js git CLI implementation based on isomorphic-git.",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/vblip/g4c.git"
  },
  "author": {
    "name": "Ray Foss",
    "email": "git@vblip.com"
  },
  "license": "GPL-3.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "node index.mjs",
    "test:dev": "tsx --watch ./test/index.ts",
    "test": "tsx ./test/index.ts",
    "publish:stable": "npm dist-tag add g4c@1.5.4 stable"
  },
  "bin": {
    "g4c": "./src/main.mjs"
  },
  "engineStrict": true,
  "engines": {
    "node": ">= 16",
    "pnpm": ">= 7"
  },
  "files": ["src/*js"],
  "dependencies": {
    "isomorphic-git": "^1.24.0"
  },
  "keywords": [
    "stackblitz",
    "gitlab"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
